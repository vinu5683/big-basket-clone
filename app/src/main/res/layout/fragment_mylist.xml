<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ui.mylist.MyListFragment" >
   <ImageView
       android:layout_width="wrap_content"
       android:layout_marginTop="50dp"
       android:layout_gravity="center"
       android:background="@drawable/shoppng"
       android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:text="Sorry! There are no items in your basket"
        android:layout_gravity="center"
        android:textSize="@dimen/sp_20"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="200dp"
        android:layout_gravity="center"
        android:text="START SHOPPING"
        android:paddingTop="14dp"
        android:paddingStart="38dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/start"
        android:layout_height="50dp"/>
   <androidx.recyclerview.widget.RecyclerView
    android:layout_width="match_parent"
    android:id="@+id/recyclerViewHorigentel"
    android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tvTectView1"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_24"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/dp_10"
        android:layout_height="wrap_content"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/recyclerViewVritcle"
        android:layout_height="wrap_content"/>



</LinearLayout>