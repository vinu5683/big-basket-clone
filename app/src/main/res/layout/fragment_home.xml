<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color_official"
    tools:context=".ui.home.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/big_basket_official"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="10dp"
                app:layout_constraintTop_toTopOf="parent">

                <EditText
                    android:id="@+id/etHomeSearch"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:width="0dp"
                    android:background="@color/white"
                    android:hint="Search 18000+ products"
                    android:padding="12dp"
                    android:textSize="14sp" />

                <ImageButton
                    android:id="@+id/ibSearch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="5dp"
                    android:background="@color/white"
                    android:padding="10dp"
                    android:src="@drawable/ic_search" />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:elevation="10dp"
                android:scaleType="fitXY"
                app:cardCornerRadius="5dp">

                <ImageView
                    android:id="@+id/ivTopOne"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </androidx.cardview.widget.CardView>

            <com.synnapps.carouselview.CarouselView
                android:id="@+id/carouselView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                app:fillColor="@color/white"
                app:pageColor="@color/black"
                app:radius="5dp"
                app:slideInterval="3000"

                />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:scaleType="fitXY"
                app:cardCornerRadius="5dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/category_caption_bar" />
            </androidx.cardview.widget.CardView>

            <LinearLayout style="@style/linearLayoutStyle">

                <androidx.cardview.widget.CardView style="@style/homeCardView">

                    <ImageView
                        android:id="@+id/ivFruits"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/fruits" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvCleaning"
                    style="@style/homeCardView">

                    <ImageView
                        android:id="@+id/ivCleaning"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/cleaning" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                style="@style/linearLayoutStyle"
                android:layout_marginTop="10dp">

                <androidx.cardview.widget.CardView style="@style/homeCardView">

                    <ImageView
                        android:id="@+id/iv00"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/foodgrains" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView style="@style/homeCardView">

                    <ImageView
                        android:id="@+id/iv01"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/bakery" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView style="@style/homeCardView">

                    <ImageView
                        android:id="@+id/iv02"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/eggs" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout style="@style/linearLayoutStyle">

                <androidx.cardview.widget.CardView style="@style/homeCardView">

                    <ImageView
                        android:id="@+id/iv10"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/kitchen" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView

                    style="@style/homeCardView">

                    <ImageView
                        android:id="@+id/iv11"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/beauty" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView style="@style/homeCardView">

                    <ImageView
                        android:id="@+id/iv12"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/beverages" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout style="@style/linearLayoutStyle">

                <androidx.cardview.widget.CardView style="@style/homeCardView">

                    <ImageView
                        android:id="@+id/iv20"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/snacks" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView

                    style="@style/homeCardView">

                    <ImageView
                        android:id="@+id/iv21"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/gourmet" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView style="@style/homeCardView">

                    <ImageView
                        android:id="@+id/iv22"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/babycare" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                style="@style/card2Style"
                app:cardCornerRadius="5dp">

                <ImageView
                    android:id="@+id/ivTopTwo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#c4c4c4"
                android:paddingTop="15dp"
                android:paddingBottom="15dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvHomeFruitsVeg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                style="@style/card2Style"
                app:cardCornerRadius="5dp">

                <ImageView
                    android:id="@+id/ivTopThree"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:scaleType="fitXY" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                style="@style/card2Style"
                app:cardCornerRadius="5dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/fruits_caption_bar" />
            </androidx.cardview.widget.CardView>

            <LinearLayout style="@style/linearLayoutStyle">

                <androidx.cardview.widget.CardView style="@style/homeCardView">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/freshfruits" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView style="@style/homeCardView">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/freshveggies" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout style="@style/linearLayoutStyle">

                <androidx.cardview.widget.CardView style="@style/homeCardView">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/cutssprouts" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView style="@style/homeCardView">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/exotic" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <com.synnapps.carouselview.CarouselView
                android:id="@+id/carouselView2"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="10dp"
                app:fillColor="@color/white"
                app:pageColor="@color/black"
                app:radius="5dp"
                app:slideInterval="3000" />

            <androidx.cardview.widget.CardView
                style="@style/card2Style"
                app:cardCornerRadius="5dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/foodgrains_caption_bar" />
            </androidx.cardview.widget.CardView>

            <LinearLayout style="@style/linearLayoutStyle">

                <androidx.cardview.widget.CardView style="@style/homeCardView">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/atta" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView style="@style/homeCardView">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/rice" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout style="@style/linearLayoutStyle">

                <androidx.cardview.widget.CardView style="@style/homeCardView">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/masalas" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView style="@style/homeCardView">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/cookingoils" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>