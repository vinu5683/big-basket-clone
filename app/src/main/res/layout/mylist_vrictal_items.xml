<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:elevation="@dimen/dp_1"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="120dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="19dp"
        android:layout_marginStart="10dp"
        android:layout_height="150dp">
        <ImageView
            android:id="@+id/ivProductImage1"
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            android:layout_height="match_parent"/>
    </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/tvParle"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@id/cardView"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginStart="15dp"
            android:text="PARLE"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvItemsName"
            android:layout_width="match_parent"
            android:layout_below="@id/tvParle"
            android:layout_toRightOf="@id/cardView"
            android:layout_marginTop="@dimen/dp_8"
            android:text="Hide and Seel"
            android:textColor="@color/black"
            android:layout_marginStart="15dp"
            android:layout_height="wrap_content"/>
        <Spinner
            android:id="@+id/spProductWignt"
            android:layout_width="match_parent"
            android:layout_below="@id/tvItemsName"
            android:layout_toRightOf="@id/cardView"
            android:layout_marginTop="18dp"
            android:layout_marginStart="15dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_below="@id/spProductWignt"
            android:layout_toRightOf="@id/cardView"
            android:layout_marginTop="18dp"
            android:layout_marginStart="15dp"
            android:text="Rs.30"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_width="90dp"
            android:background="#F83131"
            android:text="Add"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dp_10"
            android:scrollX="5dp"
            android:scrollY="5dp"
            android:layout_marginTop="120dp"
            android:layout_height="30dp"/>

</RelativeLayout>


</androidx.cardview.widget.CardView>